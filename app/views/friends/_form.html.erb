<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <form>
    <div class="row mb-3">
      <%= form.label :first_name, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :first_name, class:"form-control", type:"text", placeholder:"First name (and middle name)" %>
      </div>
    </div>
    <div class="row mb-3">
      <%= form.label :last_name, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :last_name, class:"form-control", type:"text", placeholder:"Last name" %>
      </div>
    </div>
    <div class="row mb-3">
      <%= form.label :email, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :email, class:"form-control", type:"email", placeholder:"Email address" %>
      </div>
    </div>
    <div class="row mb-3">
      <%= form.label :phone, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :phone, class:"form-control", type:"text", placeholder:"Phone number" %>
      </div>
    </div>
    <div class="row mb-3">
      <%= form.label :twitter, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :twitter, class:"form-control", type:"text", placeholder:"Twitter account handle" %>
      </div>
    </div>
    <div class="row mb-3">
      <% form.label :user_id, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.number_field :user_id, id: :friend_user_id, class:"form-control", type:"hidden", value:current_user.id %>
      </div>
    </div>
    <% current_user.inspect %> <%# check what's in the current_user object %>
    <br/>
    <div class="actions">
      <%= form.submit class:"btn btn-primary" %>
    </div>
  </form>

<% end %>
