<p id="notice"><%= notice %></p>

<h1>Friends list</h1>
<br/>

<% if user_signed_in? %>
  <table class="table table-hover">
    <thead class="table-secondary">
      <tr>
        <th>Full name</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>User ID</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= link_to friend.first_name + " " + friend.last_name, friend %></td>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= friend.user_id %></td>
          <td><%= link_to 'Edit', edit_friend_path(friend), class:"btn btn-outline-warning btn-sm" %></td>
          <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h1>hello human</h1>
  <p>oh, robots are also welcome</p>
<% end %>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-primary btn-lg" %>
